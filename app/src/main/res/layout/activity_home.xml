<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.iism.alertaparadero.Home"
    android:visibility="visible">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_btn_ir_texto"
        android:id="@+id/btn_ir"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_paradero"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_ir"
        android:layout_toStartOf="@+id/btn_ir"
        android:hint="@string/home_txt_paradero_hint"
        android:capitalize="none" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/txt_paradero"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_ir"
        android:layout_alignEnd="@+id/btn_ir" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                android:textSize="40dp"
                android:id="@+id/textView2"
                android:textColor="#0077bb"
                android:textStyle="bold"
                android:minLines="1"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/home_instruccion_1"
                android:gravity="left|center_horizontal"
                android:id="@+id/textView3"
                android:maxLines="2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:id="@+id/textView4"
                    android:textColor="#ffd400"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:minLines="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/home_instruccion_2"
                    android:gravity="left|center_horizontal"
                    android:id="@+id/textView5"
                    android:maxLines="3"
                    android:minLines="3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="40dp"
                android:id="@+id/textView6"
                android:textColor="#57b1b0"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Una vez seleccionado tu paradero, haz clic sobre el botón &quot;Alerta Paradero&quot;"
                android:id="@+id/textView7" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="40dp"
                android:id="@+id/textView8"
                android:textColor="#ed1c24"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Siéntate, escucha tu música favorita y disfruta tu viaje. Nosotros te avisamos cuando lleguemos."
                android:id="@+id/textView9" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I.I.S.M. Copyright (c) 2016. Todos los derechos reservados."
            android:id="@+id/textView16"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textColor="#000000" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_paradero_background"
        android:visibility="invisible"
        android:id="@+id/layaoutParadero"
        android:layout_alignTop="@+id/btn_ir"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@mipmap/ic_icono_paradero"
            android:layout_below="@+id/txt_cerrar_paradero"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="####"
            android:id="@+id/txt_nombre_paradero"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="####"
            android:id="@+id/txt_comuna_paradero"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_below="@+id/txt_nombre_paradero"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X       "
            android:id="@+id/txt_cerrar_paradero"
            android:gravity="right"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView"
            android:paddingTop="5dp"
            android:clickable="true"/>

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/girdRecorridos"
            android:layout_below="@+id/txt_comuna_paradero"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:choiceMode="singleChoice"
            android:numColumns="2"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_above="@+id/txt_codigo_paradero" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/txt_parada_paradero"
            android:textSize="40dp"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:gravity="center_vertical"
            android:visibility="invisible"
            android:textStyle="bold"
            android:layout_alignRight="@+id/txt_codigo_paradero"
            android:layout_alignEnd="@+id/txt_codigo_paradero"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_above="@+id/txt_nombre_paradero" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/layout_paradero_background"
            android:visibility="invisible"
            android:id="@+id/layout_recorrido"
            android:padding="20dp"
            android:layout_alignBottom="@+id/girdRecorridos"
            android:layout_below="@+id/txt_comuna_paradero"
            android:theme="@android:style/Widget.Holo.GridView">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/img_icono_recorrido"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_recorrido_rojo"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recorrido 121"
                android:textSize="15dp"
                android:id="@+id/lista_paradero_codigo"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/img_icono_recorrido"
                android:layout_toEndOf="@+id/img_icono_recorrido" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hacia Lo Espejo"
                android:textSize="15dp"
                android:id="@+id/txt_hacia_recorrido"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/lista_paradero_codigo"
                android:layout_alignLeft="@+id/lista_paradero_codigo"
                android:layout_alignStart="@+id/lista_paradero_codigo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inversiones Alsacia S.A."
                android:id="@+id/txt_empresa_recorrido"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/img_icono_recorrido"
                android:layout_alignLeft="@+id/txt_hacia_recorrido"
                android:layout_alignStart="@+id/txt_hacia_recorrido" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView4"
                android:src="@mipmap/ic_horarios"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horarios"
                android:id="@+id/textView12"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_toEndOf="@+id/imageView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txt_empresa_recorrido"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textColor="#000000"
                android:layout_below="@+id/textView12"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/textView12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunes a Viernes:"
                android:id="@+id/textView13"
                android:layout_below="@+id/textView11"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00 a 23:59"
                android:id="@+id/txt_lun_vie_recorrido"
                android:layout_below="@+id/textView13"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sábados:"
                android:id="@+id/textView15"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/txt_lun_vie_recorrido"
                android:layout_alignLeft="@+id/txt_lun_vie_recorrido"
                android:layout_alignStart="@+id/txt_lun_vie_recorrido" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00 a 23:59"
                android:id="@+id/txt_sab_recorrido"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_below="@+id/textView15"
                android:layout_alignLeft="@+id/textView15"
                android:layout_alignStart="@+id/textView15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domingos y Festivos:"
                android:id="@+id/textView17"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/txt_sab_recorrido"
                android:layout_alignLeft="@+id/txt_sab_recorrido"
                android:layout_alignStart="@+id/txt_sab_recorrido" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00 a 23:59"
                android:id="@+id/txt_dom_recorrido"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_below="@+id/textView17"
                android:layout_alignLeft="@+id/textView17"
                android:layout_alignStart="@+id/textView17" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código paradero:"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:gravity="center"
            android:id="@+id/txt_codigo_paradero"
            android:paddingRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView" />

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_opciones_paradero"
            android:padding="10dp"
            android:numColumns="1"
            android:visibility="invisible"
            android:layout_below="@+id/txt_comuna_paradero"
            android:layout_above="@+id/txt_codigo_paradero" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/linearLayout"
        android:visibility="invisible"
        android:id="@+id/layoutListaParadero"
        android:background="#000000" >

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridListaParaderos"
            android:background="#000000" />

    </RelativeLayout>

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New AutoCompleteTextView"
        android:id="@+id/autoCompleteTextView"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="559dp"
        android:layout_marginStart="559dp" />

</RelativeLayout>
