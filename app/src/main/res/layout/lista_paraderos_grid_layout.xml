<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:background="#000000"
    android:padding="10dp">

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="PA1356"
        android:id="@+id/lista_paradero_codigo"
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:background="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belisario Prats"
        android:id="@+id/lista_paradero_nombre"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lista_paradero_codigo"
        android:layout_toEndOf="@+id/lista_paradero_codigo"
        android:maxLines="2"
        android:minLines="2"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a 400 metros"
        android:id="@+id/lista_paradero_distancia"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/lista_paradero_nombre"
        android:layout_toRightOf="@+id/lista_paradero_codigo"
        android:layout_toEndOf="@+id/lista_paradero_codigo" />
</RelativeLayout>