<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="80dp"
    android:padding="0dp"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metro El Llano"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:gravity="center"
        android:id="@+id/txt_direccion_recorrido"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/txt_codigo_recorrido"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="2"
        android:minLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:id="@+id/textView14"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:id="@+id/img_esquina_recorrido"
        android:src="@mipmap/ic_esquina_celeste"
        android:padding="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H08"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/txt_codigo_recorrido"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_above="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>